<%- partial('_partial/header') %>

<div class="faction-list-page">
    <div class="page-header">
        <h1><%= page.title %></h1>
        <p class="description"><%= page.description %></p>
    </div>

    <div class="faction-grid">
        <% site.pages.forEach(function(faction) { %>
            <% if (faction.layout === 'faction' && faction.path !== 'faction/index.html') { %>
                <a href="/<%= faction.path %>" class="faction-card" style="--faction-color: #<%= faction.color || 'FFA726' %>">
                    <div class="card-image" style="background-image: url('https://placehold.co/800x300/<%= faction.color || 'FFA726' %>/ffffff?text=')">
                        <h2 class="card-title"><%= faction.title %></h2>
                    </div>
                    <div class="card-content">
                        <% if (faction.tags && faction.tags.length) { %>
                        <div class="tag-list">
                            <% faction.tags.forEach(function(tag) { %>
                                <span class="tag">
                                    <i class="tag-icon">â¬¥</i>
                                    <span class="tag-text"><%= tag %></span>
                                </span>
                            <% }); %>
                        </div>
                        <% } %>
                        <% if (faction.description) { %>
                        <p class="card-description"><%= faction.description %></p>
                        <% } %>
                    </div>
                </a>
            <% } %>
        <% }); %>
    </div>
</div>

<style>
.faction-list-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

.page-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
}

.page-header::after {
    content: '';
    position: absolute;
    bottom: -1rem;
    left: 50%;
    transform: translateX(-50%);
    width: 150px;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--primary-color), transparent);
}

.page-header h1 {
    font-size: 2.5rem;
    color: var(--primary-color);
    margin-bottom: 1rem;
    text-shadow: 0 0 10px rgba(var(--primary-color-rgb), 0.3);
}

.page-header .description {
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto;
    opacity: 0.8;
}

.faction-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
}

.faction-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 20px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    position: relative;
}

.card-image {
    width: 100%;
    height: 200px;
    background-size: cover;
    background-position: center;
    position: relative;
}

.card-image::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100%;
    background: linear-gradient(to bottom, 
        rgba(0,0,0,0) 0%,
        rgba(0,0,0,0.2) 50%,
        rgba(0,0,0,0.7) 100%
    );
}

.card-title {
    position: absolute;
    bottom: 1rem;
    left: 1.5rem;
    color: #fff;
    font-size: 1.8rem;
    z-index: 2;
    margin: 0;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
}

.card-content {
    padding: 1.5rem;
    position: relative;
}

.faction-card:hover {
    transform: translateY(-5px);
    border-color: var(--faction-color);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    background: rgba(255, 255, 255, 0.08);
}

.tag-list {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
}

.tag {
    background: rgba(255, 255, 255, 0.9);
    padding: 0.3rem 1rem;
    border-radius: 15px;
    font-size: 0.9rem;
    color: var(--faction-color);
    display: flex;
    align-items: center;
    gap: 0.3rem;
    transition: all 0.3s ease;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

.tag:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    background: #fff;
}

.tag-icon {
    font-style: normal;
    color: var(--faction-color);
    font-size: 1.2em;
}

.tag-text {
    font-weight: 500;
}

.card-description {
    font-size: 0.95rem;
    line-height: 1.5;
    opacity: 0.9;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>