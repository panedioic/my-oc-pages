    color: #333;
    align-self: center;
}

.faction-tags {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
}

.tag {
    background: rgba(255,255,255,0.15);
    padding: 0.2rem 0.6rem;
    border-radius: 12px;
    font-size: 0.95rem;
    color: #fff;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.tag:hover {
    background: rgba(255,255,255,0.2);
    transform: translateY(-2px);
}

.tag-icon {
    font-style: normal;
    color: var(--faction-color);
    font-size: 1.1em;
}

.tag-text {
    font-weight: 500;
}

@media (max-width: 768px) {
    .faction-title {
        font-size: 3rem;
    }
    
    .header-content {
        bottom: 2rem;
        left: 2rem;
        right: 2rem;
    }
    
    .main-card {
        padding: 2rem;
    }
    
    .member-list {
        grid-template-columns: 1fr;
    }
    
    .trait-card {
        padding: 1.5rem;
        gap: 1.5rem;
    }
}
</style>