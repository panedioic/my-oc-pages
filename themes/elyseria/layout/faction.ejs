}

.member-name {
    display: block;
    font-size: 1.1rem;
    font-weight: 600;
    color: #333;
    text-decoration: none;
    margin-bottom: 0.2rem;
}

a.member-name:hover {
    color: var(--faction-color);
}

.member-title {
    font-size: 0.9rem;
    color: #666;
    display: block;
}

.trait-list {
    display: grid;
    gap: 1rem;
}

.trait-card {
    display: flex;
