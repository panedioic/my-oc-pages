<div class="faction-detail">
    <div class="faction-header" style="--faction-color: #<%= page.color || 'FFA726' %>">
        <div class="header-image" style="background-image: url('https://placehold.co/1200x400/<%= page.color || 'FFA726' %>/ffffff?text=')">
            <div class="header-content">
                <h1 class="faction-title"><%= page.title %></h1>
                <div class="faction-tags">
                    <% if (page.tags && page.tags.length) { %>
                        <% page.tags.forEach(function(tag) { %>
                            <span class="tag">
                                <i class="tag-icon">‚¨•</i>
                                <span class="tag-text"><%= tag %></span>
                            </span>
                        <% }); %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="main-card">
        <div class="faction-content">
            <% if (page.description) { %>
            <div class="faction-description">
                <div class="section-header">
                    <span class="section-icon">üìú</span>
                    <h2 class="section-title">ÂäøÂäõÁÆÄ‰ªã</h2>
                </div>
                <div class="description-content">
                    <%= page.description %>
                </div>
            </div>
            <% } %>

            <% if (page.members && page.members.length) { %>
            <div class="faction-members">
                <div class="section-header">
                    <span class="section-icon">üë•</span>
                    <h2 class="section-title">‰∏ªË¶ÅÊàêÂëò</h2>
                </div>
                <div class="member-list">
                    <% page.members.forEach(function(member) { %>
                        <div class="member-card">
                            <div class="member-avatar" style="background: linear-gradient(135deg, #<%= page.color || 'FFA726' %>, rgba(0,0,0,0.5))">
                                <%= member.name.charAt(0) %>
                            </div>
                            <div class="member-info">
                                <% if (member.link) { %>
                                    <a href="<%= member.link %>" class="member-name"><%= member.name %></a>
                                <% } else { %>
                                    <span class="member-name"><%= member.name %></span>
                                <% } %>
                                <span class="member-title"><%= member.title %></span>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
            <% } %>

            <% if (page.trait && page.trait.length) { %>
            <div class="faction-traits">
                <div class="section-header">
                    <span class="section-icon">‚ú®</span>
                    <h2 class="section-title">ÂäøÂäõÁâπÁÇπ</h2>
                </div>
                <div class="trait-list">
                    <% page.trait.forEach(function(trait, index) { %>
                        <div class="trait-card">
                            <div class="trait-number"><%= (index + 1).toString().padStart(2, '0') %></div>
                            <div class="trait-content"><%= trait %></div>
                        </div>
                    <% }); %>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.faction-detail {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem 3rem;
}

.faction-header {
    margin-top: 80px;
    margin-bottom: 3rem;
    position: relative;
    z-index: 1;
}

.header-image {
    width: 100%;
    height: 360px;
    background-size: cover;
    background-position: center;
    border-radius: 24px 24px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
}

.header-image::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, 
        rgba(0,0,0,0.2) 0%,
        rgba(0,0,0,0.4) 50%,
        rgba(0,0,0,0.8) 100%
    );
}

.header-content {
    position: absolute;
    bottom: 1.5rem;
    left: 1.5rem;
    right: 1.5rem;
}

.faction-title {
    font-size: 3rem;
    color: #fff;
    margin: 0 0 0.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    text-shadow: 2px 2px 20px rgba(0,0,0,0.5);
}

.main-card {
    background: #fff;
    border-radius: 24px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1);
    padding: 2rem;
    margin-top: 0;
}

.faction-content {
    display: grid;
    gap: 2.5rem;
}

.section-header {
    display: flex;
    align-items: center;
    gap: 0.8rem;
